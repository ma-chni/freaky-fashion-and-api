@page
@model IndexModel
@using FreakyFashion.Entities
@{
    ViewData["Title"] = "Hem";
    bool IsFirstSlide(Product product)
    => product == Model.ProductList.First();
}

<div class="row">
    <div class="col">
        <a class="carousel-control-prev" href="#hero" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
    </div>
    <div class="col-10">
        <div id="hero" class="hero carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var product in Model.ProductList)
                {
                    <div class="carousel-item @(IsFirstSlide(product) ? "active" : "")">
                        <div class="d-block w-50 float-left text-center">
                            <h2>@product.Name</h2>
                            <p>@product.Description</p>
                            <p>@product.Price kr</p>
                            <a id="button" class="btn btn-primary" asp-page="/Product" asp-route-urlSlug="@product.UrlSlug">Mer info</a>
                        </div>
                        <img class="d-block w-50 img-responsive" id="carousel-img" src="@product.ImageUrl" alt="@product.Name" style="width:500px; height:600px;">
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col">
        <a class="carousel-control-next" href="#hero" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<partial name="_Categories" model="Model.Categories" />
<partial name="_PopularProducts" model="Model.ProductList" />





