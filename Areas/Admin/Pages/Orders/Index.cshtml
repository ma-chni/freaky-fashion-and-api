@page
@model FreakyFashion.Areas.Admin.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Ordrar";
}


<div class="row">
    <div class="col mt-3">
        <h3 class="text-center">Ordrar</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-hover" id="table">
            <thead class="thead-dark">
                <tr>
                    <th>Kund</th>
                    <th>Datum</th>
                    <th>Belopp</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>@item.Customer.FirstName @item.Customer.LastName</td>
                        <td>@item.Date</td>
                        <td>@item.TotalPrice kr</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
