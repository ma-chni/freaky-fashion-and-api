@page
@model FreakyFashion.Areas.Admin.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Detaljer";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ArticleNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ArticleNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ImageUrl)
            </dd>
            <dt class="col-sm-2">
                Kategorier
            </dt>
            <dd class="col-sm-10">
                @foreach (var item in Model.Product.ProductCategory)
                {
                    @Html.DisplayFor(modelItem => item.Category.Name)
                }
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</body>
</html>
